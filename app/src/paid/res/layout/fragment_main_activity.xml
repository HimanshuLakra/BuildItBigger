<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivityFragment">

    <ProgressBar android:id="@+id/progressBar" android:layout_width="50dp"
        android:layout_height="50dp" android:layout_above="@+id/btnTellJoke"
        android:layout_centerHorizontal="true" android:visibility="invisible" />

    <TextView android:id="@+id/instructions_text_view" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_above="@+id/btnTellJoke"
        android:layout_centerHorizontal="true" android:layout_marginBottom="50dp"
        android:text="@string/instructions" />

    <Button android:id="@+id/btnTellJoke" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" android:onClick="tellJoke"
        android:text="@string/button_text" />

</RelativeLayout>
